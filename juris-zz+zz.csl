<locale xml:lang="fr">
    <terms>
      <term name="editor" form="short">
        <single>dir.</single>
        <multiple>dir.</multiple>
      </term>
      <term name="translator" form="short">
        <single>trad.</single>
        <multiple>trad.</multiple>
      </term>
      <term name="page" form="short">p.</term>
    </terms>
  </locale>

<macro name="author">
  <choose>
    <if variable="author">
      <names variable="author" delimiter=" ">
        <name name-as-sort-order="all" sort-separator=" " delimiter=", " delimiter-precedes-last="always" font-variant="normal">
        <name-part name="family" text-case="sentence" font-variant="small-caps"/>
        </name>
      </names>
    </if>
    <else-if variable="editor">
      <names variable="editor" delimiter=" ">
      <name name-as-sort-order="all" sort-separator=" " delimiter=", " delimiter-precedes-last="always" font-variant="normal">
      <name-part name="family" text-case="sentence" font-variant="small-caps"/>
      </name>
      <label form="short" prefix=" (" suffix=")" text-case="lowercase"/>
      <substitute>
        <names variable="editorial-director"/>
      </substitute>
    </names>
    </else-if>
   </choose>
  </macro>

  <citation>
  <sort>
    <key variable="citation-number"/>
  </sort>
  <layout>
    <text variable="citation-number"/>
  </layout>
</citation>

  <bibliography>
  <sort>
    <key macro="author-sort"/>
  </sort>
  <layout suffix=".">
    <choose>
      <if type="book">
        <group delimiter=", ">
            <text variable="title" font-style="italic"/>
            <text macro="translator"/>
            <text variable="genre"/>
            <text macro="editor"/>
            <text macro="edition"/>
            <text variable="medium"/>
            <group delimiter=" ">
              <text term="version"/>
              <text variable="version"/>
            </group>
            <text macro="number-of-pages"/>
          </group>
      </if>
    </choose>
    <group delimiter=", ">
      <text macro="author"/>
      <text variable="title"/>
    </group>
  </layout>
</bibliography>
</style>